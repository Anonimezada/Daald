{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "packages/**/dist",
    "packages/**/*.js"
  ]
}